<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
    <title>Polland</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <link rel="stylesheet" type="text/css" href="style-0.css"/>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script type="text/javascript" src="app.js"></script>
</head>
<body data-ng-app="VoteApp">
  <div class="content" data-ng-controller="MainCtrl" ng-init="init('<%= packageForAngular %>')">
	  
      <div class="polls-viewport">
		  	<!-- LOAD OTHERS' POLLS TO CHECKOUT AND VOTE ON -->
		  {{otherPolls}}
		  	<!-- LOAD OTHERS' POLLS TO CHECKOUT AND VOTE ON -->
		  
		  
		  <div id="title">
			  <% if (user) { %>
	        <h1>Poll-land</h1>
			  <% } else { %>
			<h1>Welcome to Poll-land.</h1>
			  <% } %>
		  </div>
      </div>
	  <!------------------------------------------------------------------------------------->
      <div class="user-ctrl-bar">
		  <!------------------------------------------------------------------------------------->
		      <% if (user) { %>
		  
		  <div class="user-ctrl-panel">
			  <h1><a class="blueless-link" href="/profile"><%= user.local.username  %></a>'s Polls:</h1>

			  <!-- LOAD USER'S POLLS TO MANAGE -->
			  <div class="flex-container poll-list">
			  	<a class="blueless-link" data-ng-repeat="poll in myPolls" data-ng-href="/poll/{{poll.link}}"><div class="poll-thumb">
					<span><h3>{{poll.question}}</h3></span>
				</div></a>
				<a class="blueless-link" href="/newpoll"><div class="poll-thumb add-poll-btn"><span><h3>Create a New Poll</h3></span><p class="big-plus vert-centered">+</p></div></a>
			  </div>
			  <!-- LOAD USER'S POLLS TO MANAGE -->

		  </div>
		      <% } else { %>
		  <!------------------------------------------------------------------------------------->
		  <div class="login-area vert-centered">
		  	<a href="/login" class="btn btn-default"><h1><span class="fa fa-user"></span> Login</h1></a>
          	<a href="/signup" class="btn btn-default"><h1><span class="fa fa-user"></span> Signup</h1></a>
		  </div>
		  	  <% } %>
      </div>
	  <!------------------------------------------------------------------------------------->
  </div>
</body>
</html>


